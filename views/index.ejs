<%- include('./partials/head') %>

  <main>

    <h1 class="titel">
      <%= squad.name %>
    </h1>

    <section class="overzichtspagina">

      <!-- Hier komen de members -->
      <% slet memberlength = document.querySelector('.jou-lengte') %>
      <% squad.members.forEach(member=> { %>
      <% if(memberlength.style.paddingTop > 100){ console.log(memberlength) } %>



        <% function lengte(min, max) { return Math.random() * (150 - 220) + 100 ;} %>

          <article class="jou-lengte" style="padding-top: <%= lengte() %>px">

            <div class="liniaal"></div>

            <ul>
              <li>200cm -</li>
              <li>190cm -</li>
              <li>180cm -</li>
              <li>170cm -</li>
              <li>160cm -</li>
              <li>150cm -</li>
            </ul>

            <div class="context">
              <% if (member.avatar) { %>
                <img class="avatar" id="avatar" src="<%= member.avatar %>" alt="De avatar van <%= member.name %>" />
                <% }else{ %>
                  <img class="avatar" src="/placeholder.jpg" alt="Placeholder avatar" />
                  <% } %>
                    <!-- <h2>
                    <%= member.name %>
                      <%= member.prefix %>
                        <%= member.surname %>
                  </h2> -->
            </div>
          </article>

          <% }) %>

    </section>

  </main>

  <%- include('./partials/foot') %>